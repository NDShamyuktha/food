{# @var recipe \App\Entity\Recipe #}
<div class="ui card">
	<div class="image">
		<a href="{{ path('showRecipe', {'id': recipe.id}) }}">
			{% set image = recipe.images | first %}
			{% if (image) %}
				<img src="{{ image.url }}">
			{% else %}
				<img src="https://foodtango.com.au/img/ui/noimage.png">
			{% endif %}
		</a>
	</div>
	<div class="content">
		<div class="header">
			<a class="" href="{{ path('showRecipe', {'id': recipe.id}) }}">{{ recipe.label }}</a>
		</div>
		<div class="meta">
			<div class="ui labels">
				{% for tag in recipe.tags %}
					<a class="ui label" href="{{ path('recipeByTag', {'tag': tag.label}) }}">{{ tag.label }}</a>
				{% endfor %}
			</div>
		</div>
	</div>
	<div class="extra content">
		<span class="right floated"><i class="clock icon"></i>{{ recipe.effort }} min</span>
		<span><i class="tasks icon"></i>{{ recipe.ingredients|length }} Zutaten</span>
		<a class="ui mini negative icon button" href="{{ path('deleteRecipe', {'id': recipe.id}) }}"><i
					class="ui trash icon"></i></a>
	</div>
</div>
